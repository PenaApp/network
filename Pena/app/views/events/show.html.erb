<p id="notice"><%= notice %></p>
 <div>
   <strong><%= @event.group_name %></strong>
 </div>

 <div>
   <%= @event.date %>
 </div>


 <div>
   <%= strip_tags(@event.description) %>
 </div>

 <div>
   <%= @event.venue_name %></br>
   <%= @event.address %></br>
   <%= @event.city %>
   <%= @event.state %>
   <%= @event.zipcode %>
 </div>

<%= button_to "Attend Event", attend_event_path(@event.id), :method => :post %>

<div>
  <h3>Who's Attending (<%= @event.users.count %>)</h3><br>
  <div>
  <% @event.users.each do |user| %>
    <ul>
      <div>
        <% if current_user != user && current_user.following?(user) %>
        <% else %>
          <%= button_to "We Met", follow_path(user: user), :class => "btn btn-primary btn-sm", :method => :post %>
        <% end %>
      </div>
        <li>
          <%= user.name %>
        </li>
    </ul>
  <% end %>
  </div>
</div>

<%= link_to 'Back', events_path %>
