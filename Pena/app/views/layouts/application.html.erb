<!DOCTYPE html>
<html>
<head>
  <title>Pena</title>
  <%= stylesheet_link_tag 'application', media: 'all'%>
  <%= javascript_include_tag 'application' %>

  <%= csrf_meta_tags %>
</head>


<body<%= " id='user-#{current_user.id}'".html_safe if current_user %>>

  <nav class="navbar navbar-inverse">
  <div class="container">
    <div class="navbar-header">
      <%= link_to 'P.E.N.A', root_path, class: 'navbar-brand' %>
      <%= link_to "logout", logout_path, :method => :delete %>

    </div>
    <div id="navbar">
      <ul class="nav navbar-nav">

      </ul>
    </div>
  </div>
</nav>

<div class="container">
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>">
      <%= value %>
    </div>
  <% end %>

  <%= yield %>
</div>
</body>
</html>
