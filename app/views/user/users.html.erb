<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h2 class="page-header">Professionals in your area</h2>
    </div>
      <% @users.each_slice(3) do |row| %>
      <% row.each do |user| %>
      <% if user != current_user %>
        <div class="col-lg-4 col-sm-6 text-center">
            <% if user.distance_to(current_user) <= 20 && user.followed_by?(current_user) == false %>
            <img class="img-circle img-responsive img-center" src= "<%= user.image_url %>" alt="">
              <h3><%= link_to user.name, user_path(user[:id]) %>
                <br><small><%= user.company%> - <%= user.title %></small>
              </h3>
        </div>
            <% else %>
            <p>There are no professionals in your area - head to <strong><%= link_to "Nearby Events", events_path %></strong> to checkout events happening in your area!</p>
            <% end %>
            <% end %>
            <% end %>
            <% end %>
  </div>
</div>
